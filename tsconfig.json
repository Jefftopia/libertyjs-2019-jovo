{
  "compilerOptions": {
    "lib": [
      "es2017"
    ],
    "module": "commonjs",
    "noImplicitAny": true,
    "removeComments": false,
    "allowUnreachableCode": false,
    "noImplicitReturns": true,
    "preserveConstEnums": true,
    "declaration": false,
    "strict": true,
    "outDir": "dist",
    "target": "es2017",
    "sourceMap": false,
    "moduleResolution": "node",
    "resolveJsonModule": true
  },
  "include": [
    "./src/**/*",
    "./test/**/*"
  ],
  "exclude": [
    "./dist/**/*",
    "./node_modules/**/*"
  ]
}
